<resources>
    <style name="SliceViewStyle">
         <item name="android:background">#00000000</item>
         <item name="rowStyle">@null</item>
    </style>
    <style name="SearchBarStyle">
             <item name="android:background">#00000000</item>
    </style>

    <style name="CardView" />
    <style name="CardView.Dark" parent="" />
    <style name="CardView.Light" parent="" />

    <style name="Theme.SettingsBase" parent="@*android:style/Theme.DeviceDefault.Settings">
        <item name="android:statusBarColor">@*android:color/accent_device_default</item>
   </style>

       <style name="ContextualCardStyle">
        <item name="android:layout_marginBottom">@*com.android.settings:dimen/contextual_card_vertical_margin</item>
        <item name="android:layout_marginStart">@*com.android.settings:dimen/contextual_card_side_margin</item>
        <item name="android:layout_marginEnd">@*com.android.settings:dimen/contextual_card_side_margin</item>
        <item name="cardBackgroundColor">@*android:color/accent_device_default</item>
        <item name="cardCornerRadius">@*com.android.settings:dimen/contextual_card_corner_radius</item>
        <item name="cardElevation">0.0dip</item>
        <item name="rippleColor">?*android:colorControlHighlight</item>
        <item name="strokeColor">@*com.android.settings:color/contextual_card_stroke_color</item>
        <item name="strokeWidth">1.0dip</item>
    </style>

    <style name="Theme.Settings.Home" parent="@*com.android.settings:style/Theme.Settings.HomeBase">
         <item name="android:statusBarColor">@*android:color/accent_device_default</item>
         <item name="android:windowLightStatusBar">false</item>
         <item name="android:windowBackground">@*android:color/primary_device_default_settings_light</item>
         <item name="android:navigationBarColor">?*android:colorAccent</item>
         <item name="android:navigationBarDividerColor">@*android:color/transparent</item>
         <item name="colorPrimaryDark">@*android:color/accent_device_default</item>
    </style>

    <style name="ThemeOverlay.SwitchBar.Settings" parent="@*com.android.settings:style/ThemeOverlay.SwitchBar.Settings.Base" />

    <style name="SudThemeMaterial.Light" parent="@*com.android.settings:style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@*android:color/accent_device_default</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.BottomSheetDialog" parent="@*com.android.settings:style/ThemeOverlay.MaterialComponents.Dialog">
      <item name="android:statusBarColor">@*android:color/accent_device_default</item>
         <item name="android:navigationBarColor">?*android:colorAccent</item>
    </style>

    <style name="FallbackHome" parent="@*android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:statusBarColor">@*android:color/accent_device_default</item>
    </style>

    <style name="LightTheme.SubSettings.SetupWizard" parent="@*android:style/Theme.DeviceDefault.Light">
        <item name="android:statusBarColor">@*android:color/accent_device_default</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.Light.BottomSheetDialog" parent="@*com.android.settings:style/ThemeOverlay.MaterialComponents.Dialog">

        <item name="android:statusBarColor">@*android:color/accent_device_default</item>
         <item name="android:navigationBarColor">?*android:colorAccent</item>
    </style>


    <style name="SudThemeMaterial" parent="@*com.android.settings:style/Theme.AppCompat.NoActionBar">

        <item name="android:statusBarColor">@*android:color/accent_device_default</item>

    </style>

    <style name="SudThemeMaterial.Light" parent="@*com.android.settings:style/Theme.AppCompat.Light.NoActionBar">

        <item name="android:statusBarColor">@*android:color/accent_device_default</item>

    </style>

    <style name="ThemeOverlay.MaterialComponents.Light.BottomSheetDialog" parent="@*com.android.settings:style/ThemeOverlay.MaterialComponents.Dialog">
         <item name="android:navigationBarColor">?*android:colorAccent</item>
        <item name="android:statusBarColor">@*android:color/accent_device_default</item>

    </style>

</resources>
