	<LinearLayout
		android:orientation="horizontal"
		android:layout_marginTop="8dp"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_marginStart="6dp"
			android:gravity="center"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center|center_horizontal"
				android:layout_gravity="center">

				<TextClock
					android:textColor="@*android:color/white"
					android:textAppearance="?*android:attr/textAppearanceSmall"
					android:textSize="14sp"
					android:gravity="left"
					android:textStyle="bold"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:format12Hour="hh:mm"
					android:format24Hour="HH:mm"/>

				<View
					android:background="#ffffffff"
					android:layout_width="0.7dp"
					android:layout_gravity="center"
					android:layout_height="8.5dp"
					android:layout_marginEnd="5dp"
					android:layout_marginStart="5dp"
					android:layout_marginTop="0.5dp"/>

				<TextClock
					android:textAppearance="?*android:attr/textAppearanceSmall"
					android:textColor="@*android:color/white"
					android:textSize="14sp"
					android:textStyle="bold"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:format12Hour="EEE, MMM dd"
					android:format24Hour="EEE, MMM dd"/>

				<RelativeLayout
					android:layout_width="0.0dp"
					android:layout_height="25dp"
					android:id="@*com.android.systemui:id/system_icons_container"
					android:layout_weight="1.0"
					android:theme="@*com.android.systemui:style/QSHeaderTheme"
					android:layout_marginTop="0dp"
					android:layout_gravity="center">

					<include
						layout="@*com.android.systemui:layout/mland"/>

				</RelativeLayout>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>
