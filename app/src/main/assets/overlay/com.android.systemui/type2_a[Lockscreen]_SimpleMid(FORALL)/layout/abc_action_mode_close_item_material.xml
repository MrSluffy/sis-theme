<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="horizontal"
	android:gravity="bottom|center"
	android:layout_gravity="bottom"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

			<HorizontalScrollView
			android:layout_width="200dp"
			android:scrollbars="none"
			android:overScrollMode="never"
			android:layout_gravity="center"
			android:gravity="center"
			android:layout_height="fill_parent">

			<LinearLayout
				android:layout_width="200dp"
				android:layout_height="200dp">

			    <ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_android"
					android:layout_gravity="center"/>

				<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"

					android:src="@*com.android.systemui:drawable/dessert_dandroid"
					android:layout_gravity="center"/>

				<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_donut"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_donutburger"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_eclair"

					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"

					android:src="@*com.android.systemui:drawable/dessert_froyo"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"

					android:src="@*com.android.systemui:drawable/dessert_gingerbread"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"

					android:src="@*com.android.systemui:drawable/dessert_honeycomb"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"

					android:src="@*com.android.systemui:drawable/dessert_ics"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"

					android:src="@*com.android.systemui:drawable/dessert_jandycane"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"

					android:src="@*com.android.systemui:drawable/dessert_jellybean"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"

					android:src="@*com.android.systemui:drawable/dessert_keylimepie"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"

					android:src="@*com.android.systemui:drawable/dessert_petitfour"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"

					android:src="@*com.android.systemui:drawable/dessert_zombiegingerbread"
					android:layout_gravity="center"/>

			</LinearLayout>

		</HorizontalScrollView>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="bottom|center"
			android:layout_gravity="bottom|center">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center">

				<ImageView
					android:layout_width="10dp"
					android:layout_height="10dp"
					android:src="@*com.android.systemui:drawable/abc_vector_test"
					android:layout_marginRight="5dp"/>

				<ImageView
					android:layout_width="10dp"
					android:layout_height="10dp"
					android:src="@*com.android.systemui:drawable/abc_vector_test"
					android:layout_marginRight="5dp"/>

				<TextClock
					android:textColor="@*com.android.systemui:color/abc_search_url_text_selected"
					android:textAppearance="?*android:attr/textAppearanceSmall"
					android:textSize="20sp"
					android:textStyle="bold"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:format12Hour="hh:mm"
					android:format24Hour="HH:mm"/>

				<ImageView
					android:layout_width="10dp"
					android:layout_height="10dp"
					android:src="@*com.android.systemui:drawable/abc_vector_test"
					android:layout_marginLeft="5dp"/>

				<ImageView
					android:layout_width="10dp"
					android:layout_height="10dp"
					android:src="@*com.android.systemui:drawable/abc_vector_test"
					android:layout_marginLeft="5dp"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center">

				<TextClock
					android:textColor="@*com.android.systemui:color/lb_search_bar_hint_speech_mode"
					android:textAppearance="?*android:attr/textAppearanceSmall"
					android:textSize="60sp"
					android:fontFamily="serif-monospace"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:format12Hour="EEEE"
					android:format24Hour="EEEE"
					android:layout_gravity="top"/>

			</LinearLayout>

		</LinearLayout>

	</FrameLayout>

</LinearLayout>
