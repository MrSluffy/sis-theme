	<RelativeLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="wrap_content"
		android:layout_height="380dp"
		android:layout_gravity="bottom"
	    android:gravity="bottom"
		android:orientation="horizontal">
<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="350dp"
		android:gravity="center"
		android:orientation="vertical">

		<FrameLayout
			android:layout_width="300dp"
			android:layout_height="match_parent"
			android:layout_gravity="center">

			<ImageView
				android:src="@*com.android.systemui:drawable/abc_vector_test"
				android:layout_width="100dp"
				android:layout_height="300dp"
				android:layout_gravity="center"
				android:id="@+id/strokeFrame"/>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="200dp"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:gravity="center">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="150dp"
					android:gravity="top|center"
					android:layout_gravity="top|center">

					<TextClock
						android:textColor="@*com.android.systemui:color/lb_search_bar_hint_speech_mode"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:textSize="15sp"
						android:textStyle="bold"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textScaleX="1.0"
						android:format12Hour="yyyy. MM. dd."
						android:format24Hour="yyyy. MM. dd."
						android:layout_marginTop="10dp"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="150dp"
					android:gravity="bottom|center"
					android:layout_gravity="bottom|center">

					<TextClock
						android:textColor="@*com.android.systemui:color/abc_search_url_text_selected"
						android:textAppearance="?*android:attr/textAppearanceSmall"
						android:textSize="20sp"
						android:textStyle="bold"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="2dp"
						android:format12Hour="hh.mm"
						android:format24Hour="hh.mm"/>

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom|center">

				<TextClock
						android:textColor="@*com.android.systemui:color/lb_search_bar_hint_speech_mode"
						android:textAppearance="?*android:attr/textAppearanceSmall"
						android:textSize="20sp"
						android:textStyle="bold"
						android:textAllCaps="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:format12Hour="EEEE"
						android:format24Hour="EEEE"/>

			</LinearLayout>

			<ImageView
				android:layout_width="220dp"
				android:layout_height="220dp"
				android:src="@*com.android.systemui:drawable/dessert_android"
				android:layout_gravity="center"
				android:id="@+id/imageFrame"/>

		</FrameLayout>

	</LinearLayout>
</RelativeLayout>
