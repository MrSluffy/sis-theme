	<TextClock
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:format12Hour="hh"
		android:theme="@*com.android.systemui:style/TextAppearance.Keyguard"
		android:textColor="@*com.android.systemui:color/abc_search_url_text_selected"
		android:format24Hour="HH"
		android:fontFamily="sans-serif-thin"
		android:textSize="100sp"
		android:alpha="0.8"
		android:layout_centerVertical="true"
		android:id="@+id/sishour" />

	<TextClock
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:format12Hour="mm"
		android:textColor="@*com.android.systemui:color/remote_input_hint"
		android:format24Hour="mm"
		android:theme="@*com.android.systemui:style/TextAppearance.Keyguard"
		android:gravity="center_vertical"
		android:layout_gravity="center_vertical"
		android:fontFamily="sans-serif-thin"
		android:textSize="40sp"
		android:layout_marginBottom="-8dp"
		android:layout_marginTop="12dp"
		android:textStyle="bold"
		android:paddingTop="20dp"
		android:id="@+id/sismins"
		android:layout_toRightOf="@+id/sishour" />

		<TextClock
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="1dp"
		android:textColor="@*com.android.systemui:color/lb_search_bar_hint_speech_mode"
		android:format12Hour="EEE dd MMM"
		android:format24Hour="EEE dd MMM"
		android:letterSpacing="0.1"
		android:theme="@*com.android.systemui:style/TextAppearance.Keyguard"
		android:textStyle="bold"
		android:layout_below="@+id/sismins"
		android:gravity="center_vertical"
		android:layout_gravity="center_vertical"
		android:textSize="15sp"
		android:textAllCaps="true"
		android:id="@+id/sisdate"
		android:layout_toRightOf="@+id/sishour" />

</RelativeLayout>
