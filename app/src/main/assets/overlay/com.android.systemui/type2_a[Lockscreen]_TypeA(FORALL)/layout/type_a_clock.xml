<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res-auto"
		android:layout_gravity="top|bottom|left|right|center"
		android:orientation="vertical"
		android:gravity="top|bottom|left|right|center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:gravity="center|bottom"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom">

			<HorizontalScrollView
			android:layout_width="200dp"
			android:scrollbars="none"
			android:overScrollMode="never"
			android:layout_gravity="center"
			android:gravity="center"
			android:layout_height="fill_parent">

			<LinearLayout
			   android:layout_marginBottom="10dp"
				android:layout_width="200dp"
				android:layout_height="200dp">

			    <ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_android"
					android:layout_gravity="center"/>

				<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_dandroid"
					android:layout_gravity="center"/>

				<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_donut"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_donutburger"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_eclair"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_froyo"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_gingerbread"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_honeycomb"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_ics"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_jandycane"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_jellybean"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_keylimepie"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_petitfour"
					android:layout_gravity="center"/>

					<ImageView
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:src="@*com.android.systemui:drawable/dessert_zombiegingerbread"
					android:layout_gravity="center"/>

			</LinearLayout>

		</HorizontalScrollView>

		</LinearLayout>

		<LinearLayout
			android:layout_gravity="center"
			android:orientation="vertical"
			android:gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent">

			<LinearLayout
				android:layout_gravity="center"
				android:gravity="center"
				android:orientation="horizontal"
				android:id="@+id/sluffyClock"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">

						<TextClock
							android:textColor="@*com.android.systemui:color/abc_search_url_text_selected"
							android:layout_gravity="center_horizontal"
							android:textSize="25.0dip"
							android:textAppearance="?*android:attr/textAppearanceSmall"
							android:layout_width="wrap_content"
							android:format12Hour="hh.mm"
					        android:format24Hour="HH.mm"
							android:layout_height="wrap_content"
							android:layout_alignParentTop="true"
							android:layout_centerHorizontal="true"
							android:letterSpacing="0.03"/>

					</LinearLayout>

					<LinearLayout
				android:layout_gravity="center"
				android:gravity="center"
				android:layout_width="wrap_content"
				android:orientation="horizontal"
				android:layout_height="wrap_content">

				<LinearLayout
					android:layout_gravity="center"
					android:gravity="center"
					android:layout_width="wrap_content"
					android:orientation="horizontal"
					android:layout_height="25.0dip">

							<TextClock
					android:textAppearance="?*android:attr/textAppearanceSmall"
					android:textColor="@*com.android.systemui:color/abc_search_url_text_selected"
					android:textSize="20sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:format12Hour="EEE, MMM dd"
					android:format24Hour="EEE, MMM dd"/>

						</LinearLayout>

					</LinearLayout>

					<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="25dip"
				android:orientation="horizontal"
				android:layout_gravity="center">

				<com.android.systemui.BatteryMeterView
					android:gravity="center"
					android:textColor="?*android:attr/textColorPrimary"
					android:layout_margin="2dp"
					android:layout_gravity="center"
					android:id="@*com.android.systemui:id/battery"
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>
