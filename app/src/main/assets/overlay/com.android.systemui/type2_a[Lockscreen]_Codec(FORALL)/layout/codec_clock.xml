<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center">

	<TextClock
		android:layout_width="25dp"
		android:layout_height="wrap_content"
		android:format12Hour="EEE"
		android:format24Hour="EEE"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textSize="29sp"
		android:textStyle="bold"
		android:minLines="3"
		android:textAllCaps="true"
		android:gravity="center"
		android:layout_marginBottom="10dp"
		android:textColor="@*com.android.systemui:color/lb_search_bar_hint_speech_mode"/>

	<View
		android:layout_width="45dp"
		android:layout_height="1dp"
		android:background="@*com.android.systemui:color/remote_input_hint"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Code :"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textSize="12sp"
		android:visibility="visible"
		android:typeface="serif"
		android:gravity="center"
		android:layout_marginTop="10dp"
		android:textColor="@*android:color/white"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<TextClock
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:format12Hour="h"
			android:textColor="@*com.android.systemui:color/abc_search_url_text_selected"
			android:format24Hour="h"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textSize="37sp"
			android:textStyle="normal"
			android:id="@+id/hour_clock"/>

		<TextClock
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:format12Hour="mm"
			android:textColor="@*com.android.systemui:color/abc_search_url_text_selected"
			android:format24Hour="mm"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textSize="37sp"
			android:textStyle="normal"/>

	</LinearLayout>

</LinearLayout>
